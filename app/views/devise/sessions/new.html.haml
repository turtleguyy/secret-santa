= semantic_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  = f.inputs do
    = f.input :username, required: false, autofocus: true, input_html: { autocomplete: 'username' }, input_html: {class: 'form-input'}
    = f.input :password, required: false, input_html: { autocomplete: 'current-password' }, input_html: {class: 'form-input'}
    = f.input :remember_me, as: :boolean if devise_mapping.rememberable?

  = f.actions do
    = f.action :submit, label: 'Sign In', input_html: {class: 'border-animation'}

= render 'devise/shared/links'
