%h2 Who Are You?

= semantic_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
  - if resource.errors.any?
    #error_explanation
      %h2= pluralize(resource.errors.count, 'error')
      %ul
        - resource.errors.full_messages.each do |message|
          %li= message

  = f.inputs do
    = f.input :first_name, required: true, autofocus: true
    = f.input :last_name, required: true
    = f.input :email, required: true
    = f.input :current_password, required: true, input_html: { autocomplete: 'current-password' }

  = f.inputs 'Update Password' do
    = f.input :password, label: 'New password', required: false, input_html: { autocomplete: 'new-password' }
    = f.input :password_confirmation, required: false, input_html: { autocomplete: 'new-password' }

  = f.actions do
    = f.action :submit, label: 'Save'
